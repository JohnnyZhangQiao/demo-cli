{
  "compilerOptions": {
    "experimentalDecorators": true,
    "paths": {
      "@root/*": ["./*"]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "./bin",
    "baseUrl": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "include": ["./src"]
}
